{
  "manifest_version": 2,
  "name": "Plasmium - KDE/Plasma desktop integration",
  "description": "Integrate your browser with the plasma desktop.",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "alarms",
    "bookmarks",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "desktopCapture",
    "downloads",
    "fontSettings",
    "history",
    "identity",
    "idle",
    "management",
    "nativeMessaging",
    "notificationProvider",
    "notifications",
    "pageCapture",
    "privacy",
    "processes",
    "proxy",
    "sessions",
    "system.display",
    "tabCapture",
    "tabs",
    "topSites",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://ajax.googleapis.com/"
  ]
}
